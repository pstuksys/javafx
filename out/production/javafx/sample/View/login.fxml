<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="350.0" prefWidth="450.0" style="-fx-background-color: #03fcc2;">
            <children>
                <Label alignment="CENTER" layoutX="89.0" layoutY="22.0" prefHeight="53.0" prefWidth="272.0" styleClass="style.css" text="Login" textFill="WHITE">
                    <font>
                        <Font name="Plantagenet Cherokee" size="36.0" />
                    </font>
                </Label>
                <Label layoutX="69.0" layoutY="116.0" text="Username:">
                    <font>
                        <Font size="18.0" />
                    </font></Label>
                <Label layoutX="72.0" layoutY="171.0" text="Password:">
                    <font>
                        <Font size="18.0" />
                    </font></Label>
                <TextField fx:id="username" layoutX="160.0" layoutY="110.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: #e3e2de;">
                    <font>
                        <Font size="18.0" />
                    </font></TextField>
                <PasswordField fx:id="password" layoutX="160.0" layoutY="165.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: #e3e2de;">
                    <font>
                        <Font size="18.0" />
                    </font></PasswordField>
                <Button fx:id="loginBtn" layoutX="160.0" layoutY="261.0" mnemonicParsing="false" onAction="#login" prefHeight="41.0" prefWidth="100.0" style="-fx-background-color: #f403fc;" text="Login" textFill="WHITE" />
                <Label fx:id="error" alignment="CENTER" layoutX="45.0" layoutY="219.0" prefHeight="27.0" prefWidth="370.0" textFill="#b52222">
                    <font>
                        <Font size="18.0" />
                    </font></Label>
                <Button fx:id="signin" layoutX="275.0" layoutY="261.0" mnemonicParsing="false" onAction="#register" prefHeight="41.0" prefWidth="100.0" style="-fx-background-color: #f403fc;" text="Register" textFill="WHITE" />
                <Button fx:id="close" layoutX="408.0" layoutY="24.0" mnemonicParsing="false" onAction="#closeWindow" style="-fx-background-color: #f5d787;" text="X" textAlignment="CENTER" visible="false" />
            </children>
        </Pane>
    </children>
</GridPane>
